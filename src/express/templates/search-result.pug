extends layout.pug

block content
  main.page-content
    section.search-results
      h1.visually-hidden Результаты поиска
      .search-results__wrapper
        p.search-results__label
          | Найдено 
          span.js-results публикаций: #{offers.length || 0}
        ul.search-results__list
          each offer in offers
            li.search-results__item
              .ticket-card.ticket-card--color05
                .ticket-card__img
                  img(src='img/' + offer.picture srcset='img/item05@2x.jpg 2x' alt='Изображение товара')
                .ticket-card__info
                  span.ticket-card__label #{offer.type}
                  .ticket-card__categories
                    a(href='#') #{offer.category}
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href='#') #{offer.title}
                    p.ticket-card__price
                      span.js-sum #{offer.sum}
                      |  ₽
                  .ticket-card__desc
                    p #{offer.description}