extends ../layout.pug

block content
  main.page-content
    section.tickets-list
      h2.visually-hidden Самые новые предложения
      .tickets-list__wrapper
        .tickets-list__header
          a.tickets-list__btn.btn.btn--big(href='#')
            span Новая публикация
        ul
          each item in offers
            li.tickets-list__item.js-card
              .ticket-card.ticket-card--color06
                .ticket-card__img
                  img(src='img/' + item.picture srcset='img/item06@2x.jpg 2x' alt='Изображение товара')
                .ticket-card__info
                  span.ticket-card__label #{item.type}
                  .ticket-card__categories
                    a(href='#') #{item.category}
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href='#') #{item.title}
                    p.ticket-card__price
                      span.js-sum #{item.sum}
                      |  ₽
                button.ticket-card__del.js-delete(type='button') Удалить
